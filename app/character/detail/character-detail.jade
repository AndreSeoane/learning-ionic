ion-view.character.character__background(view-title='{{::vm.character.name}}' img-cache ic-bg='{{::vm.character.thumbnailUrl}}')
    ion-nav-buttons(side="right")
        button.button.button-clear.icon.ion-link(ng-click='::vm.openDetailPage()')
    ion-content.character__content
        .character__meta
            span.character__text {{::vm.character.name}}
            br
            br
            span.character__text.character__description {{::vm.character.description}}
        .character-comic-list
            .character-comic-list__title.character__text(ui-sref='app.characterDetailComicList({comics:vm.comics, character: vm.character})'
            ng-click='vm.showComics($event)')
                span Comics
                span.icon.ion-chevron-right.character-comic-list__count(ng-if='vm.hasMoreComics && !vm.isLoadingComics')
                span.character-comic-list__count(ng-if='vm.hasMoreComics && !vm.isLoadingComics') See more
            div.character-comic-list__content.character-comic-list__content--centered(ng-if='vm.isLoadingComics')
                ion-spinner.spinner-light
            div.character-comic-list__content.character-comic-list__content--centered(ng-if='vm.noComics') :(
            ion-slides.character-comic-list__content(options='vm.swiper.options' slider='vm.swiper.instance' ng-if='!vm.isLoadingComics && !vm.noComics')
                ion-slide-page(ng-repeat='comic in vm.comics track by comic.id' ui-sref='app.characterDetailComicDetail({comic:comic})')
                    div.character-comic-list__cover(ng-if='::comic.thumbnailUrl' img-cache ic-bg='{{::comic.thumbnailUrl}}')
                    div.character-comic-list__cover.character-comic-list__cover--not-found(ng-if='::!comic.thumbnailUrl')
                        div {{::comic.title}}
