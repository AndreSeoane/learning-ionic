//
  Create tabs with an icon and label, using the tabs-positive style.
  Each tab's child <ion-nav-view> directive will have its own
  navigation history that also transitions its views in and out.
ion-tabs.tabs-icon-top.tabs-striped.tabs-background-assertive.tabs-color-light.tabs-top
    // Dashboard Tab
    ion-tab(title='Characters', icon-off='ion-android-star-outline', icon-on='ion-android-star', href='#/tab/characters')
        ion-nav-view(name='tab-characters')
    // Comics Tab
    ion-tab(title='Comics', icon-off='ion-ios-book-outline', icon-on='ion-ios-book', href='#/tab/comics')
        ion-nav-view(name='tab-comics')
    // Favourites Tab
    ion-tab(title='Favourites', icon-off='ion-android-favorite-outline', icon-on='ion-android-favorite', href='#/tab/favourites')
        ion-nav-view(name='tab-favourites')
    // Account Tab
    ion-tab(title='Settings', icon-off='ion-ios-gear-outline', icon-on='ion-ios-gear', href='#/tab/settings')
        ion-nav-view(name='tab-settings')
