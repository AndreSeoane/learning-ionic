//
  Create tabs with an icon and label, using the tabs-positive style.
  Each tab's child <ion-nav-view> directive will have its own
  navigation history that also transitions its views in and out.
ion-tabs.tabs-icon-top.tabs-striped.tabs-background-assertive.tabs-color-light.tabs-top
    // Dashboard Tab
    ion-tab(title='Heroes', icon-off='ion-ios-pulse', icon-on='ion-ios-pulse-strong', href='#/tab/heroes')
        ion-nav-view(name='tab-heroes')
    // Chats Tab
    ion-tab(title='Chats', icon-off='ion-ios-chatboxes-outline', icon-on='ion-ios-chatboxes', href='#/tab/chats')
        ion-nav-view(name='tab-chats')
    // Account Tab
    ion-tab(title='Account', icon-off='ion-ios-gear-outline', icon-on='ion-ios-gear', href='#/tab/account')
        ion-nav-view(name='tab-account')
