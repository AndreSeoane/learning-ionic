ion-view.comic.comic__background(view-title='{{::vm.comic.title}}' img-cache ic-bg='{{::vm.comic.thumbnailUrl}}')
    ion-nav-buttons(side="right")
        button.button.button-clear.icon.ion-link(ng-click='::vm.openDetailPage()')
    ion-content.comic__content
        .comic__meta
            div.comic__price(ng-if='vm.comic.printPrice') {{::vm.comic.printPrice}} $
            br
            span.comic__text {{::vm.comic.title}}
            br
            br
            span.comic__text.comic__description(ng-bind-html='::vm.comic.description')


